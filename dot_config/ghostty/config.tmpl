# Font (matching your Linux WezTerm config)
font-family = "JetBrainsMono Nerd Font"
font-style = Medium
# font-size = 16
font-size = {{ if eq .chezmoi.os "linux" }}10{{ else }}16{{ end }}

# macOS font thickening for better visibility
font-thicken = true
font-thicken-strength = 150

# Titlebar settings
window-decoration = auto
window-theme = ghostty
window-titlebar-background = #11111D

# Cell adjustments
adjust-cell-width = 10%
adjust-cell-height = 20%

# Theme (Catppuccin Mocha)
theme = Catppuccin Mocha

# Override background color
background = #11111D

# Window opacity
background-opacity = 0.94

# Minimal padding for editor comfort
window-padding-x = 24
window-padding-y = 0

# Balance extra padding across all edges
window-padding-balance = true
window-padding-color = extend-always

# Keybindings
keybind = ctrl+t=new_tab
keybind = ctrl+n=new_window
keybind = ctrl+w=close_tab
keybind = ctrl+shift+w=close_window

# Clipboard
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard

# Behaviors
confirm-close-surface = true
shell-integration-features = ssh-env
